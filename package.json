{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "The user management service",
    "main": "src/server.ts",
    "scripts": {
        "build": "tsc",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "start": "cross-env NODE_ENV=development nodemon dist/src/server.js",
        "format:fix": "prettier . --write",
        "format:check": "prettier . --check",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
        "test": "cross-env NODE_ENV=test jest --no-cache  --coverage --all --runInBand",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:generate -d src/config/data-source.ts",
        "migration:run": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts ",
        "migration:create": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:create",
        "migration:revert": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
        "migration:show": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:show -d src/config/data-source.ts",
        "prepare": "husky"
    },
    "author": "Shahariaz.info@gmail.com",
    "license": "ISC",
    "lint-staged": {
        "src/**/*.{ts,js}": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.0",
        "@commitlint/config-conventional": "^19.6.0",
        "@eslint/js": "^9.15.0",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.0",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.10.3",
        "@types/source-map-support": "^0.5.10",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "cross-env": "^7.0.3",
        "dotenv-flow": "^4.1.0",
        "eslint": "^9.15.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.15.0"
    },
    "dependencies": {
        "auth-service": "file:",
        "bcrypt": "^5.1.1",
        "colorette": "^2.0.20",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "eslint-config-prettier": "^9.1.0",
        "express": "^4.21.1",
        "express-jwt": "^8.5.1",
        "express-validator": "^7.0.0",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "lint-staged": "^15.2.10",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "rsa-pem-to-jwk": "^1.1.3",
        "source-map-support": "^0.5.21",
        "typeorm": "^0.3.20",
        "winston": "^3.17.0"
    }
}
